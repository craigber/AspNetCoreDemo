@model IEnumerable<Cartoonalogue.Models.Cartoon>
<link href="~/lib/datatables/media/css/dataTables.bootstrap.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Index";
}

<h2>Cartoon List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> New</a>
</p>
<hr />
<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenDebuted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seasons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Network)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studio)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(Model => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenDebuted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seasons)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Network.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studio.Name)
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/datatables/media/js/datatables.min.js"></script>
    <script src="~/lib/datatables/media/js/dataTables.bootstrap.min.js"></script>

    <script>
        $(document).ready(function(){
            $('.table').DataTable();
        });
    </script>
}